block vars
include statics/doctype.html
html
	include head
	body
		table(border="0" width="100%" height="100%" cellpadding="0" cellspacing="0" bgcolor="#{background}")
			tr
				td(align="center" valign="top" bgcolor="#{background}" style="background-color: #{background};")
					br
					table(border="0" width="600" cellpadding="0" cellspacing="0").container
						tr
							td(align="left" bgcolor="#32A8CE").container-padding.header
								table(border="0" width="100%" height="100%" cellpadding="0" cellspacing="0")
									tr
										td(align="left" class="pad-left")#title
											block title
										td(align="right" width="48px" class="pad-left")
											img(src="https://www.simplyhomework.nl/static/images/simplyLogo-white.png" height="48px")#logo
						tr
							td(align="left").container-padding.content
								block content
						include footer
						block scripts