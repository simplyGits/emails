extends template/template
block vars
	- var background = "#FFFFFF"

block title
	| Nieuw Project

block scripts
	script(type="application/ld+json").
		{
		  "@context": "http://schema.org",
		  "@type": "EmailMessage",
		  "potentialAction": {
		    "@type": "ViewAction",
		    "target": "#{projectUrl}",
		    "url": "#{projectUrl}",
		    "name": "Link openen"
		  },
		  "description": "Project bekijken in sH",
		  "publisher": {
		    "@type": "Organization",
		    "name": "simplyHomework",
		    "url": "https://www.simplyhomework.nl/"
		  }
		}

block content
	table(border="0" width="100%" height="100%" cellpadding="0" cellspacing="0")
		tr
			td(align="center" width="100%")
				br
				p 
					i
						b #{person}
					|  heeft je toegevoegd aan het project:
				h1 #{project}
				p Ga meteen aan de slag, de chat staat al klaar!
				br
				a(class="sH-button" href="#{projectUrl}") Bekijken in simplyHomework
				br
				br