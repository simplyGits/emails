extends template/template
block vars
	- var background = "#FFFFFF"

block title
	| Nieuw Cijfer

block scripts
	script(type="application/ld+json").
		{
		  "@context": "http://schema.org",
		  "@type": "EmailMessage",
		  "potentialAction": {
		    "@type": "ViewAction",
		    "target": "#{vakUrl}",
		    "url": "#{vakUrl}",
		    "name": "Link openen"
		  },
		  "description": "Cijfer bekijken in sH",
		  "publisher": {
		    "@type": "Organization",
		    "name": "simplyHomework",
		    "url": "https://www.simplyhomework.nl/"
		  }
		}

block content
	table(border="0" width="100%" height="100%" cellpadding="0" cellspacing="0")
		tr
			td(align="center" width="100%")
				br
				a(class="vak") #{vak}
				br
				a(class="cijfer-#{onv} big") #{cijfer}
				br
				br
				br
				p Je gemiddelde is nu een 
					b #{gemiddelde}
				br
				a(class="sH-button" href="#{vakUrl}") Bekijken in simplyHomework
				br
				br